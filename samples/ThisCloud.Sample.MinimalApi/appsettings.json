{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  
  "ThisCloud": {
    "Web": {
      "ServiceName": "sample-minimal-api",
      
      "Cors": {
        "Enabled": true,
        "AllowedOrigins": [
          "http://localhost:3000",
          "https://app.thiscloud.local"
        ],
        "AllowCredentials": true
      },
      
      "Swagger": {
        "Enabled": true,
        "RequireAdmin": false,
        "AllowedEnvironments": [
          "Development",
          "Staging"
        ]
      },
      
      "Cookies": {
        "SecurePolicy": "SameAsRequest",
        "SameSite": "Lax",
        "HttpOnly": true
      },
      
      "Compression": {
        "Enabled": false
      }
    }
  }
}
